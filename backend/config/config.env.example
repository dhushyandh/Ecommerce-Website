# Copy this file to config.env and fill values
# Local development defaults
NODE_ENV=development
PORT=8000

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
REACT_APP_BACKEND_URL=http://localhost:8000

# Database
DB_LOCAL_URI=your_mongodb_connection_string

# Auth
JWT_SECRET=replace_me
JWT_EXPIRES_TIME=7d
COOKIE_EXPIRES_TIME=7

# Google OAuth
# Add these redirect URIs in Google Cloud Console:
# - http://localhost:8000/api/auth/google/callback
# - https://vipstore-ecom.onrender.com/api/auth/google/callback
GOOGLE_CLIENT_ID=replace_me
GOOGLE_CLIENT_SECRET=replace_me
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# Cloudinary
CLOUDINARY_API_KEY=replace_me
CLOUDINARY_API_SECRET=replace_me
CLOUDINARY_CLOUD_NAME=replace_me

# Stripe
STRIPE_API_KEY=replace_me
STRIPE_SECRET_KEY=replace_me
